#!/bin/bash

choice=$(printf "Full Screen\nFull Screen - With Audio\nRegion\nRegion - With Audio\nStop Recording" | fuzzel --dmenu --minimal-lines)

case "$choice" in
    "Full Screen")
        wf-recorder -f ~/Videos/Screencasts/$(date +"%Y-%m-%d-%H%M%S.mkv") &
        ;;
    "Full Screen - With Audio")
        wf-recorder -a -f ~/Videos/Screencasts/$(date +"%Y-%m-%d-%H%M%S.mkv") &
        ;;
    "Region")
        region=$(slurp)
        wf-recorder -g "$region" -f ~/Videos/Screencasts/$(date +"%Y-%m-%d-%H%M%S.mkv") &
        ;;
    "Region - With Audio")
        region=$(slurp)
        wf-recorder -g "$region" -a -f ~/Videos/Screencasts/$(date +"%Y-%m-%d-%H%M%S.mkv") &
        ;;
    "Stop Recording")
        pkill -INT wf-recorder
        ;;
esac
